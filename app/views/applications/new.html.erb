<h1>New Adoption Application</h1>
<section id="application-new">
<%= form_with url: "/applications", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :street, "Street Address" %>
  <%= f.text_field :street %>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :state %>
  <%= f.text_field :state %>
  <%= f.label :zip, "Zip Code" %>
  <%= f.number_field :zip %>
  <%= f.submit "Submit" %>
<% end %>
</section>
